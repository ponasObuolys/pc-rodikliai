<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Pagrindinės spalvos -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    
    <!-- Teksto spalvos -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/>
    
    <!-- Metrikų spalvos -->
    <SolidColorBrush x:Key="CpuBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="RamBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="GpuBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="NetworkBrush" Color="#9C27B0"/>
    <SolidColorBrush x:Key="DiskBrush" Color="#FF9800"/>

    <!-- Šešėliai -->
    <Color x:Key="ShadowColor">#000000</Color>

    <!-- Grafikai -->
    <Color x:Key="CPUColor">#E74C3C</Color>
    <Color x:Key="RAMColor">#3498DB</Color>
    <Color x:Key="GPUColor">#2ECC71</Color>
    <Color x:Key="NetworkUpColor">#E67E22</Color>
    <Color x:Key="NetworkDownColor">#9B59B6</Color>
    <Color x:Key="DiskColor">#34495E</Color>

    <!-- Šepetėliai -->
    <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SubtleTextBrush" Color="#B0B0B0"/>

    <!-- Grafikų šepetėliai -->
    <SolidColorBrush x:Key="CPUBrush" Color="{StaticResource CPUColor}"/>
    <SolidColorBrush x:Key="RAMBrush" Color="{StaticResource RAMColor}"/>
    <SolidColorBrush x:Key="GPUBrush" Color="{StaticResource GPUColor}"/>
    <SolidColorBrush x:Key="NetworkUpBrush" Color="{StaticResource NetworkUpColor}"/>
    <SolidColorBrush x:Key="NetworkDownBrush" Color="{StaticResource NetworkDownColor}"/>
    <SolidColorBrush x:Key="DiskBrush" Color="{StaticResource DiskColor}"/>

</ResourceDictionary> 