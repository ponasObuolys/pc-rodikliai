<Window x:Class="PC_Rodikliai.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_Rodikliai.Views"
        xmlns:viewmodels="clr-namespace:PC_Rodikliai.ViewModels"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="PC Rodikliai" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- AntraÅ¡tÄ—s juosta -->
        <Grid Grid.Row="0" Height="30" Background="{StaticResource BorderBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Lango pavadinimas -->
            <TextBlock Text="PC Rodikliai" 
                     Foreground="{StaticResource TextBrush}"
                     Margin="10,0,0,0"
                     VerticalAlignment="Center"/>

            <!-- Valdymo mygtukai -->
            <StackPanel Grid.Column="1" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Right">
                <Button Content="âš™" 
                        Style="{StaticResource WindowControlButton}"
                        Command="{Binding ShowSettingsCommand}"/>
                <Button Content="ðŸ—•" 
                        Style="{StaticResource WindowControlButton}"
                        Command="{Binding MinimizeCommand}"/>
                <Button Content="âœ•" 
                        Style="{StaticResource WindowControlButton}"
                        Command="{Binding CloseCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Pagrindinis turinys -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding MetricsViewModel.Values}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- AntraÅ¡tÄ— -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}" 
                                         FontSize="24" 
                                         Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Title}" 
                                         Style="{StaticResource MetricHeaderStyle}"/>
                            </StackPanel>

                            <!-- MetrikÅ³ sÄ…raÅ¡as -->
                            <ItemsControl Grid.Row="1" 
                                        ItemsSource="{Binding Values}" 
                                        Margin="0,0,0,10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Text="{Binding Label}" 
                                                     Grid.Column="0"
                                                     Style="{StaticResource MetricLabelStyle}"/>
                                            <TextBlock Text="{Binding Value}" 
                                                     Grid.Column="1"
                                                     Style="{StaticResource MetricValueStyle}"/>
                                            
                                            <ProgressBar Value="{Binding Percentage}" 
                                                       Maximum="100"
                                                       Margin="0,2,0,0" 
                                                       Grid.ColumnSpan="2"
                                                       Foreground="{Binding ProgressBrush}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Grafikas -->
                            <lvc:CartesianChart Grid.Row="2"
                                              Series="{Binding Series}"
                                              XAxes="{Binding XAxes}"
                                              YAxes="{Binding YAxes}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window> 